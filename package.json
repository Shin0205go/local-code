{
  "name": "ollama-code",
  "version": "0.1.0",
  "description": "OllamaモデルとMCPを活用したコーディング支援CLI",
  "main": "dist/index.js",
  "bin": {
    "ollama-code": "./bin/ollama-code.js"
  },
  "type": "module",
  "scripts": {
    "start": "node ./bin/ollama-code.js",
    "prebuild": "npm run clean",
    "build": "tsc",
    "postbuild": "npm run build:bin",
    "build:bin": "chmod +x ./bin/ollama-code.js",
    "watch": "tsc --watch",
    "dev": "npm run build && npm start",
    "presetup": "npm run build",
    "setup": "node ./bin/ollama-code.js setup",
    "premcp-chat": "npm run build",
    "mcp-chat": "node ./bin/ollama-code.js mcp-chat",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "ollama",
    "ai",
    "code",
    "agent",
    "cli",
    "sandbox",
    "mcp",
    "modelcontextprotocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "inquirer": "^8.2.5",
    "node-fetch": "^3.3.2",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.5",
    "@types/node": "^18.11.9",
    "typescript": "^4.9.3"
  }
}